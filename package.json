{
  "name": "node-ts-microservice",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "test": "jest --coverage --verbose"
  },
  "dependencies": {
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/node": "^11.12.2",
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "morgan": "~1.9.0"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "jest": "^24.5.0",
    "ts-jest": "^24.0.1",
    "@types/jest": "^24.0.11"
  }
}
